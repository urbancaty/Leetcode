class Solution {
public:
    int reverse(int x) {
        if (x) {
            long long res = 0;
            int sign = x / abs(x);
            x = abs(x);
            while (x) {
                res = res * 10 + x % 10;
                x /= 10;
            }
            res = sign*res;
            return INT_MIN<=res && res<=INT_MAX ? res : 0;
        }
        else {
            return 0;
        }
    }
};
